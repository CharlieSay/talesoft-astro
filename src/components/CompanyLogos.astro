---
import AOGLogo from "../assets/company-logos/aog.svg";
import AudaciousLogo from "../assets/company-logos/audacious.svg";
import BattlecreekLogo from "../assets/company-logos/battle-creek.svg";
import HillsongLogo from "../assets/company-logos/hillsong.svg";

const companies = [
  { name: "Hillsong Church", logo: HillsongLogo },
  { name: "Assemblies of God", logo: AOGLogo },
  { name: "BattleCreek Church", logo: BattlecreekLogo },
  { name: "Audacious Church", logo: AudaciousLogo },
];
---

<div class="w-full py-12">
  <p class="text-center text-sm text-zinc-500 mb-8">
    Trusted by leading ministries worldwide
  </p>
  <div
    class="flex flex-wrap justify-center gap-12 items-center max-w-5xl mx-auto px-4"
  >
    {
      companies.map((company) => (
        <div class="h-12 grayscale opacity-50 hover:grayscale-0 hover:opacity-100 transition-all duration-300">
          <img
            src={company.logo.src}
            alt={company.name}
            class="h-full w-auto"
          />
        </div>
      ))
    }
  </div>
</div>
