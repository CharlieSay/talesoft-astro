---
import Button from './Button.astro';
import { Menu } from 'lucide-astro';
---

<header
  class="fixed w-full bg-zinc-950/80 backdrop-blur-sm border-b border-zinc-800/50 z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <a
        href="/"
        class="text-2xl font-display font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-zinc-400 hover:text-primary-400 transition-colors"
      >
        Talesoft Digital
      </a>

      <nav class="hidden lg:flex items-center space-x-8">
        <a
          href="/services"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >Services</a
        >
        <a
          href="/about"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >About</a
        >
        <a
          href="/portfolio"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >Portfolio</a
        >
        <a
          href="/blog"
          class="text-zinc-400 hover:text-primary-400 transition-colors">Blog</a
        >
        <Button href="https://store.talesoft.digital" variant="accent"
          >Worship Store</Button
        >
        <Button
          href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ3Bq0uLcYpB7EOuk6nORPDJPsgEYzPXuQxKTAAxLo_oc4ihBUC_N8NRqENjRa2O_fXLmTZEwK5K"
          variant="primary">Get in Touch</Button
        >
      </nav>

      <div class="lg:hidden flex items-center">
        <button
          id="mobile-menu-button"
          class="p-2 text-zinc-400 hover:text-primary-400 transition-colors"
          aria-label="Toggle mobile menu"
        >
          <Menu class="w-6 h-6" />
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden lg:hidden py-4 border-t border-zinc-800/50"
    >
      <nav class="flex flex-col space-y-4">
        <a
          href="/services"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >Services</a
        >
        <a
          href="/about"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >About</a
        >
        <a
          href="/portfolio"
          class="text-zinc-400 hover:text-primary-400 transition-colors"
          >Portfolio</a
        >
        <a
          href="/blog"
          class="text-zinc-400 hover:text-primary-400 transition-colors">Blog</a
        >
        <Button
          href="https://store.talesoft.digital"
          variant="accent"
          class="w-full">Worship Store</Button
        >
        <Button
          href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ3Bq0uLcYpB7EOuk6nORPDJPsgEYzPXuQxKTAAxLo_oc4ihBUC_N8NRqENjRa2O_fXLmTZEwK5K"
          variant="primary"
          class="w-full">Get in Touch</Button
        >
      </nav>
    </div>
  </div>

  <script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  </script>
</header>
